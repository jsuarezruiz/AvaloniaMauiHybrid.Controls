<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AvaloniaMauiHybrid.Controls.Gallery.ControlsPage"
    xmlns:avalonia="clr-namespace:Avalonia.Maui.Controls;assembly=AvaloniaMauiHybrid.Controls"
    Title="AvaloniaMauiHybrid Controls">
    <ScrollView>
        <VerticalStackLayout>
            <Label
                Text="Button"/>
            <avalonia:Button
                Background="Purple"
                Foreground="White"
                Text="Button"/>
            <Label
                Text="Calendar"/>
            <avalonia:Calendar
                IsTodayHighlighted="True"/>
            <Label
                Text="CheckBox"/>
            <avalonia:CheckBox  
                Text="CheckBox"/>
            <Label
                Text="ProgressBar"/>
            <avalonia:ProgressBar
                IsIndeterminate="True"/>
            <Label
                Text="ToggleSwitch"/>
            <avalonia:ToggleSwitch
                IsChecked="True"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
