<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AvaloniaMauiHybrid.Controls.Gallery.ControlsPage"
    xmlns:controls="clr-namespace:Avalonia.Maui.Controls;assembly=AvaloniaMauiHybrid.Controls"
    Title="AvaloniaMauiHybrid Controls">
    <ScrollView>
        <VerticalStackLayout>
            <Label
                Text="Calendar"/>
            <controls:Calendar
                IsTodayHighlighted="True"/>
            <Label
                Text="ProgressBar"/>
            <controls:ProgressBar
                IsIndeterminate="True"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
